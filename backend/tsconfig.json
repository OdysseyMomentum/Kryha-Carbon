{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "allowJs": false,
    "sourceMap": true,
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2019", "DOM"],
    "outDir": "build",
    "rootDir": "src",
    "noEmit": true
  },
  "include": ["src", "decs.d.ts"]
}
